{
  "extends": "next/core-web-vitals",
  "rules": {
    // Permitir usar let aunque pueda ser const
    "prefer-const": "off",

    // Permitir usar any en TypeScript
    "@typescript-eslint/no-explicit-any": "off",

    // Desactivar warning de dependencias en useEffect (a veces molesta en dev)
    "react-hooks/exhaustive-deps": "off"
  }
}
{
  "extends": ["next/core-web-vitals"],
  "rules": {
    "@typescript-eslint/no-explicit-any": "off",
    "@typescript-eslint/no-unused-vars": "warn",
    "prefer-const": "warn",
    "react-hooks/exhaustive-deps": "warn"
  }
}
